<!DOCTYPE html>
<html>
<head>
  <title>eBookStore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<% if session[:user_id] %>
		<script type="text/javascript">
			LaunchDemoMini();
		</script>
	<% end %>
	<div class="header">
		<div class="header-logo">
			<h1><%= link_to 'eBookSore', root_url, :class => "logo" %></h1><br>
			<% if session[:user_id] %>
				<%= link_to "Usuarios", users_path, :class => "user-list" %>&nbsp;
				<%= link_to "Ebooks", ebooks_path, :class => "ebook-list"%>
			<% end %>
		</div>
		<% if session[:user_id] %>
			<%= link_to 'Logout', logout_path, :class => 'logout' %>
		<% end %>
	</div>
	<div class="content">
		<%= yield %>
	</div>	
	<div class="footer-full"><div class="footer-wrapper"><div class="logo"><%= link_to 'eBookSore', root_url %></div></div></div>
	</body>
</html>
