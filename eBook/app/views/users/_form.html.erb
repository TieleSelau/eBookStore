<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	<%= f.label :nome %>
	<%= f.text_field :nome %>
  </div>  
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :genero %>
    <%= f.select(:genero, "val", {"Masc" => "Masc", "Fem" => "Fem"}) %>
  </div>
  <div class="field">
    <%= f.label :data_nascimento %>
    <%= f.date_select(:data_nascimento, :start_year => 1900, :end_year => 2012) %>
  </div>
  <div class="field">
    <%= f.label :senha %>
    <%= f.text_field :senha %>
  </div>
  <div class="field">
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
