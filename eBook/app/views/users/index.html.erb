<h1>Listing users</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Genero</th>
    <th>Data nascimento</th>
    <th>Senha</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nome %></td>
    <td><%= user.email %></td>
    <td><%= user.genero %></td>
    <td><%= user.data_nascimento %></td>
    <td><%= user.senha %></td>
    <td><%= user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

